@model Otel.Models.Musteri
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "AdminMusteri", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section id="form-control-repeater">
        <div class="row">
            <!-- file repeater  -->
            <div class="col-xl-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"><b>Müşteri Düzenle</b></h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form action="#">
                                @Html.Hidden("musteriID")
                                <div class="row">
                                    @Html.HiddenFor(model => model.musteriID)

                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label class="control-label col-md-6">Müşteri  Adı</label>
                                        @Html.EditorFor(model => model.musteriAdi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.musteriAdi, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label class="control-label col-md-6">Muşteri Soyadi</label>
                                        @Html.EditorFor(model => model.musteriSoyadi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.musteriSoyadi, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label class="control-label col-md-6">Muşteri Telefon</label>
                                        @Html.EditorFor(model => model.musteriTelefon, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.musteriTelefon, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label class="control-label col-md-6">Doğum Tarihi</label>
                                        @Html.EditorFor(model => model.musteriDogTar, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.musteriDogTar, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label class="control-label col-md-6">Durum</label>
                                        @Html.EditorFor(model => model.active, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.active, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label class="control-label col-md-6">TC No</label>
                                        @Html.EditorFor(model => model.musteriTC, new { htmlAttributes = new { @class = "form-control",@type="number" } })
                                        @Html.ValidationMessageFor(model => model.musteriTC, "", new { @class = "text-danger" })
                                    </div>


                                    <div class="col form-group p-0">
                                        <div class="col-md-offset-4 col-md-10">
                                            <input type="submit" value="Güncelle" class="btn btn-success" />
                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /file repeater -->

        </div>
    </section>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
