
@model Otel.Models.Urun

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Ürün Düzenle</h3>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("Edit", "Urun", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.urunID)

                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Adı</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.urunAd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.urunAd, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Açıklama</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.urunAciklama, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.urunAciklama, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Fiyat</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.urunFiyat, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.urunFiyat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Fotoğraf</label>
                    <div class="col-md-10">
                        <input type="file" name="urunResim" id="urunResim" value="" accept=".jpg,.png,.gif,.JPEG,.jpeg" class="form-control" />
                        @Html.ValidationMessageFor(model => model.urunResim, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Kategori Seç</label>
                    <div class="col-md-10">
                        @Html.DropDownList("kategoriID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.kategoriID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
