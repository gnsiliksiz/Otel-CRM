@model IList<Otel.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="breadcrumb-wrapper col-12">
    <ol class="breadcrumb p-0 mb-0">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","AdminHome")"><i class="bx bx-home-alt"></i></a>
        </li>

        <li class="breadcrumb-item active">
            Kullanıcılar
        </li>
    </ol>
</div>
<br />
<a href="/Otel/Create" class="btn btn-danger mb-1 btn-sm">Yeni Kullanıcı Ekle</a>
<br />
<br />
@Html.Hidden("userID")
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><b>Kullanıcı Listesi</b> </h3>
    </div>
    <!-- /.card-header -->




    <div class="card-body">
        <table id="example2" class="table zero-configuration">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Şifre</th>
                    <th>Durum</th>
                    <th>Yetki</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.username</td>
                        <td>@item.password</td>
                        <td>
                            @if (item.active == true)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pasif</span>
                            }
                        </td>
                        <td>@item.Yetki.yetkiAd</td>
                        <td>
                            <button type="button" class="btn btn-info btn-sm" onclick="@("window.location.href='"+Url.Action("Edit","Otel", new { userID = item.userID }) + "'");"><i class="fas fa-pencil-alt"></i> Duzenle</button>
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#DeleteConfirmation" onclick="DeleteUserRecord(@item.userID)"><i class="fa fa-trash-o">&nbsp </i>Sil</button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>


<!-- DELETE MODAL -->
<div class="modal fade" id="DeleteConfirmation" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModal">Kullanıcı Sil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p> Seçilen Kullanıcıyı silmek istediğinize emin misiniz ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Iptal</button>
                <button type="button" class="btn btn-danger" onclick="ConfirmDelete()">Onayla</button>
            </div>
        </div>
    </div>
</div>





<script>
    //Show The Popup Modal For DeleteComfirmation
    var DeleteUserRecord = function (userID) {
        $("#userID").val(userID);
        $("#DeleteConfirmation").modal("show");
    }
    var ConfirmDelete = function () {
        var userID = $("#userID").val();
        $.ajax({
            type: "POST",
            url: "/Otel/DeleteUserRecord?userID=" + userID,
            success: function (result) {
                alert("Silme islemi Basarili!..");
                window.location.href = "/Otel/Index";
                $("#DeleteConfirmation").modal("hide");
                $("#modal .close").click();
            }
        })
    }
</script>