@model Otel.Models.Keep

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("Edit", "AdminHousekeeping", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <section id="form-control-repeater">
        <div class="row">
            <!-- file repeater  -->
            <div class="col-xl-8 col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"><b>Housekeeping Düzenle</b></h4>
                    </div>
                    <div class="card-content" >
                        <div class="card-body" align="center">
                            <form action="#">
                                @Html.Hidden("keepID")
                                <div class="row">

                                    <div class="col-md-12 col-sm-6 form-group">
                                        <label class="control-label col-md-6">Housekeeping Adı</label>
                                        @Html.EditorFor(model => model.keepAd, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.keepAd, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-12 col-sm-6 form-group">
                                        <label class="control-label col-md-6">Durum</label>
                                        <select name="Interested_in" class="form-control">
                                            <option value="male">Aktif</option>
                                            <option value="female">Pasif</option>
                                        </select>

                                    </div>
                                    <br /><br /> <br /><br /> <br />
                                    <div class="col form-group p-0">
                                        &nbsp;&nbsp; &nbsp;&nbsp;
                                        <div class="col-md-offset-2 col-md-10" align="right">
                                            <input type="submit" value="Güncelle" class="btn btn-success"  />
                                        </div>


                                        <div>
                                            @Html.ActionLink("Geri Dön", "Index")
                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /file repeater -->

        </div>
    </section>
}


